@model IEnumerable<AlisverisProje.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Ürün Ekleme Sayfası</h1>

<p>
    <a asp-action="Create">Yeni Ürün Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UrunAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.KategoriAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Ürün Güncelle </a> |
                <a asp-action="Details" asp-route-id="@item.Id">Ürün Detayı Gör</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Ürün Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
