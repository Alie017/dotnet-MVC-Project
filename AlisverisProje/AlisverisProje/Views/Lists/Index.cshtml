@model IEnumerable<AlisverisProje.Models.List>

@{
    ViewData["Title"] = "Index";
}

<h1>Alışveriş Listelerim</h1>

<p>
    <a asp-action="Create">Yeni Alışveriş Listesi Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Detail.DetailName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Alışverişi Güncelle</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Alışveriş Detayları</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Alışverişi Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
